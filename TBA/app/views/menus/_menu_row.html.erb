<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= menu.food_name %></small></h4>
	  <h4>Ingredients: <%= menu.ingredients %></h4>
	  <h4>Restaurant source: <%= menu.restaurant %></h4>
    
    </div>
    <div class="col-xs-4">
      <%= form_for order_item, remote: true do |f| %>
      <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency menu.price %></span></h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :menu_id, value: menu.id %>
            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
    
  </div>
</div>